@using Restaurant.Domain.Dto;
@model SignInDto



@{
    ViewData["Title"] = "Sign in";
}

<h1>@ViewData["Title"]</h1>


<div class="row">
    <div class="col-sm-5">
        <form action="/Account/Login" method="post">
            <h2 class="display-6">Sign in</h2>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control"/>
                <label asp-for="Password">Password</label>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            
            <div class="form-floating mb-3">
                <div>
                    <input asp-for="RememberMe" type="checkbox"/>
                    <label asp-for="RememberMe">Remember me</label>
                    <span class="text-danger" asp-validation-for="RememberMe"></span>
                </div>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Sign In</button>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

